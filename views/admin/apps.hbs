                <th class="uk-width-small">evaluator</th>
                <th class="uk-width-small">webScore</th>
                <th class="uk-width-small">technicalCategory</th>


            </tr>
        </thead>
        <tbody id="tBody">
            {{#each apps}}
            <tr>
                <td><input class="uk-checkbox" type="checkbox"></td>
                <td class="uk-text-primary uk-text-nowrap">
                    {{this.name}}
                </td>
                <td >
                    {{this.surName}}
                </td>
                <td >
                    {{this.lastName}}
                </td>
                <td>
                    {{this.email}}
                </td>
                <td>
                    {{this.interview_score}}
                </td>
                <td>
                    {{this.personal_interviewer}}
                </td>
                {{!-- <td>
                    {{this.interviewer_comment}}
                </td> --}}
                <td>
                    {{this.tel}}
                </td>
                <td>
                    {{this.kindOfUser}}
                </td>
                <td>
                    {{this.grade}}
                </td>
                <td>
                    {{this.adult}}
                </td>
                <td>
                    {{this.course}}
                </td>
                <td >
                    {{this.score}}
                </td>
                <td>
                    {{this.evaluator}}
                </td>
                <td>
                    {{this.webScore}}
                </td>
                <td>
                    {{this.technicalCategory}}
                </td>


            </tr>
            {{else}}
            <tr>
                <td>
                    <h2>
                        No hay resultados
                    </h2>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

