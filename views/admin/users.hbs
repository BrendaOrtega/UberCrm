<section class="uk-container">

<h2>Admin Panel</h2>

<a href="/admin/courses" class="uk-button uk-button-secondary">
	Cursos
</a>
<a href="/admin/users" class="uk-button uk-button-secondary">
	Usuarios
</a>
<a class="uk-button uk-button-primary" href="#modal-center" uk-toggle>Crear Usuario</a>


<div class="uk-overflow-auto">
    <table class="uk-table uk-table-hover uk-table-middle uk-table-divider">
        <thead>
            <tr>
                <th class="uk-table-shrink">Select</th>
                <th class="uk-table-shrink">Img</th>
                <th class="uk-table-expand">Nombre</th>
                <th class="uk-width-small">E-mail</th>
                <th class="uk-table-shrink uk-text-nowrap">Curso seleccionado</th>
                <th class="uk-table-shrink uk-text-nowrap">Estatus</th>
            </tr>
        </thead>
        <tbody id="tBody">
            {{#each users}}
            <tr>
                <td><input class="uk-checkbox" type="checkbox"></td>
                <td><img class="uk-preserve-width uk-border-circle" src="https://www.ironhack.com/assets/shared/logo.svg" width="40" alt=""></td>
                <td class="uk-table-truncate">
                    <a class="uk-link-reset" href="/admin/users/{{this._id}}">
                        {{this.app.name}} {{this.app.surName}} {{this.app.lastName}}
                    </a>
                </td>
                <td class="uk-table-truncate">{{this.email}}</td>
                <td class="uk-text-primary uk-text-nowrap">{{this.selectedCourse.kind}} - {{date this.selectedCourse.date}}</td>
                <td class="uk-text-danger uk-text-nowrap">{{this.status}}</td>
            </tr>
            {{else}}
            <tr>
                <td>
                    <h2>
                        AÃºn no hay usuarios
                    </h2>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

</section>






