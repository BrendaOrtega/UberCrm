<section class="uk-container">

<h2>Admin Panel</h2>

<a href="/admin/courses" class="uk-button uk-button-secondary">
	Cursos
</a>
<a href="/admin/users" class="uk-button uk-button-secondary">
	Usuarios
</a>
<a class="uk-button uk-button-primary" href="/admin/courses" uk-toggle>Cancelar</a>


<article class="bliss-flex">

<div class="uk-overflow-auto"> {{!--  --}}

<form class="uk-card uk-card-body" action="/admin/courses/{{course._id}}" method="post" >
    <fieldset class="uk-fieldset">

        <legend class="uk-legend">Editar Curso</legend>

        <div class="uk-margin">
            <h4>Fecha de inicio</h4>
             <input value="{{course.fecha}}" name="date" type="date" >
        </div>
        <div class="uk-margin">
            <h4>Fecha de Finalizaci√≥n</h4>
             <input value="{{course.endFecha}}" name="endDate" type="date" >
        </div>

        <div class="uk-margin">
            <h4>Curso </h4>
            <select name="kind" class="uk-select">
                <option selected value="{{course.kind}}">{{course.kind}}</option>
                <option value="Web Dev">Web Dev</option>
                <option value="UX/UI">UX/UI</option>
            </select>
        </div>
        
        <div class="uk-margin">
            <h4>Tipo</h4>
            <select name="type" class="uk-select">
                <option selected value="{{course.type}}">{{course.type}}</option>
                <option value="Full-time">Full-time</option>
                <option value="Part-time">Part-time</option>
            </select>
        </div>
        <div class="uk-margin">
            <h4>Lugares</h4>
            <input value="{{course.totalPlaces}}" type="number" max="25" name="totalPlaces" class="uk-input"/>
        </div>
        <br>
        <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
            <label><input {{#if course.active}} checked {{/if}} name="active" class="uk-checkbox" type="checkbox">Activo</label>
        </div>

    </fieldset>
    <input value="Actualizar" type="submit" class="uk-button uk-button-danger">
</form>

</div>{{!--  forms --}}

{{!-- alumni --}}
<div>
    <h3>Apartados: {{course.totalEnrolled}}</h3>

    <ul class="uk-list uk-list-striped">
            {{#each course.enrolled}}
        <li>
            <a href="/admin/users/{{this._id}}">
            {{this.username}}
            </a>
        </li>
            {{/each}}
    </ul>

</div>

</article>

</section>






<div id="modal-center" class="uk-flex-top" uk-modal>
    <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">

        <button class="uk-modal-close-default" type="button" uk-close></button>

       

 




    </div>
</div>